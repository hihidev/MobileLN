<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="50dp">
    <android.support.design.card.MaterialCardView
        android:id="@+id/channel_state_color_cardview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@android:color/holo_green_light"
        app:cardCornerRadius="25dp"
    />
    <android.support.v7.widget.AppCompatTextView android:id="@+id/channel_name_textview"
                                                 android:layout_width="wrap_content"
                                                 android:layout_height="25dp"
                                                 android:layout_alignParentTop="true"
                                                 android:layout_toRightOf="@id/channel_state_color_cardview"
                                                 android:lines="1"
                                                 android:text="XXXX"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_alignParentBottom="true"
                  android:layout_below="@id/channel_name_textview"
                  android:layout_toRightOf="@id/channel_state_color_cardview"
                  android:weightSum="2.0"
    >
        <TextView android:id="@+id/channel_my_bal" android:layout_width="match_parent"
                  android:layout_height="match_parent" android:layout_weight="1.0" android:text="IN"/>
        <TextView android:id="@+id/channel_opp_bal" android:layout_width="match_parent"
                  android:layout_height="match_parent" android:layout_weight="1.0" android:text="OUT"/>
    </LinearLayout>
</RelativeLayout>
