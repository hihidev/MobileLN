<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/white">
    <TextView android:id="@+id/receive_amount_textview" android:layout_width="120dp"
              android:layout_height="60dp"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:gravity="center"
              android:text="+XXXXX"
              android:textSize="22sp"/>

    <TextView android:id="@+id/from_textview" android:layout_width="240dp"
              android:layout_height="25dp"
              android:layout_alignParentTop="true"
              android:layout_toEndOf="@id/receive_status_imageview"
              android:gravity="center_vertical"
              android:text="From ABC Company"
              android:layout_margin="5dp"
              android:textSize="17sp"/>
    <TextView android:id="@+id/receive_reference_textview" android:layout_width="240dp"
              android:layout_height="25dp"
              android:layout_alignParentBottom="true"
              android:layout_below="@id/from_textview"
              android:layout_margin="5dp"
              android:gravity="center_vertical"
              android:text="abcdef01234567890abcdef0123465678" android:textSize="12sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"/>
</RelativeLayout>
