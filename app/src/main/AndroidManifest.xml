<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.mobileln">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
    <activity
        android:name=".MainActivity"
        android:fitsSystemWindows="true"
        android:screenOrientation="portrait"
        android:label="@string/app_name">
        <intent-filter>
            <action android:name="android.intent.action.MAIN"/>

            <category android:name="android.intent.category.LAUNCHER"/>
        </intent-filter>
    </activity>
    <activity
        android:name=".DebugActivity"
        android:label="Debug">
        <intent-filter>
            <action android:name="android.intent.action.MAIN"/>
            <category android:name="android.intent.category.LAUNCHER"/>
        </intent-filter>
    </activity>
    <activity
        android:name="com.journeyapps.barcodescanner.CaptureActivity"
        android:screenOrientation="fullSensor"
        tools:replace="screenOrientation" />
    <activity android:name=".DebugLogActivity"/>
    <activity android:name=".SettingsActivity"/>
    <activity android:name=".CustomConfigActivity"/>
    <activity android:name=".DebugConsoleActivity" android:theme="@style/Theme.AppCompat"/>
    <activity android:name=".BitcoinWalletActivity" android:label="Bitcoin Wallet" android:theme="@style/BitcoinWalletTheme" />
    <activity android:name=".ChannelSetupActivity" android:windowSoftInputMode="adjustPan" android:label="Channel" android:theme="@style/BitcoinWalletTheme" />
    <service android:name=".NodeService"/>

    </application>
</manifest>